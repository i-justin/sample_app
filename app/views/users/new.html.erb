<h1>Sign Up</h1>
<%=form_for(@user) do |f| %>
<%=render 'shared/error_messages'%>
  <div class="field">
  	<%=f.label :name %><br/>
  	<%=f.text_field :name%>
  </div>
  <div>
    <%=f.label :email%><br/>
    <%=f.text_field :email%>
  </div>  
  <div>
    <%=f.label :password%><br/>
    <%=f.password_field :password%>
  </div> 
  <div>
    <%=f.label :password_confirmation, "Confirmation"%><br/>
    <%=f.password_field :password_confirmation%>
  </div>    
  <div class="actions">
  	 <%=f.submit "Sign Up"%>
  </div>
<%end%>
